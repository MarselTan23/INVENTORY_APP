<div class="d-flex mb-4 justify-content-between text-center align-items-center">
  <h1>Suppliers</h1>
  <a href="/supplier/add" class="btn btn-primary">Add Supplier</a>
</div>


<div class="card shadow mb-4 col-lg-4 col-md-6 col-sm-12">
  <div class="card-header">
    <h6 class="m-0 font-weight-bold text-primary">Total Supplier</h6>
  </div>
  <div class="card-body">
    <div class="text-center">
      <h3>
        <%= data.length %>
      </h3>
      <p class="lead">Total number of Supplier</p>
    </div>
  </div>
</div>



<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((supplier, index)=> { %>
            <tr>
              <td>
                <%= index + 1 %>
              </td>
              <td>
                <%= supplier.title %>
              </td>
              <td>
                <a href="/supplier/edit?id=<%= supplier.id %>" class="text-primary">Edit</a>
                |
                <a href="/supplier/delete?id=<%= supplier.id %>" class="text-danger"
                  onclick="return confirm('Are you sure you want to delete this supplier?');">Delete</a>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>