<div class="d-flex mb-4 justify-content-between text-center align-items-center">
  <h1>Products</h1>
  <a href="/product/add" class="btn btn-primary">Add Product</a>
</div>

<div class="card shadow mb-4 col-lg-4 col-md-6 col-sm-12">
  <div class="card-header">
    <h6 class="m-0 font-weight-bold text-primary">Total Products</h6>
  </div>
  <div class="card-body">
    <div class="text-center">
      <h3>
        <%= data.length %>
      </h3>
      <p class="lead">Total number of products</p>
    </div>
  </div>
</div>


<div class="card shadow mb-4">
  <div class="card-body">




    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((product, index)=> { %>
            <tr>
              <td>
                <%= index + 1 %>
              </td>
              <td>
                <%= product.title %>
              </td>
              <td>
                <%= product.price %>
              </td>
              <td>
                <%= product.category %>
              </td>
              <td>
                <%= product.supplier %>
              </td>
              <td>
                <a href="/product/edit?id=<%= product.id %>" class="text-primary">Edit</a>
                |
                <a href="/product/delete?id=<%= product.id %>" class="text-danger"
                  onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>